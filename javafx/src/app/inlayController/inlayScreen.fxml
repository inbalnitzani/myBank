<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<VBox fx:id="vbox" prefHeight="459.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.inlayController.inlayController">
   <children>
      <Label alignment="CENTER" prefHeight="22.0" prefWidth="600.0" text="Create new Inlay" textAlignment="CENTER" textFill="#3921cf">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <HBox prefHeight="27.0" prefWidth="600.0">
         <children>
            <Label prefHeight="17.0" prefWidth="88.0" text="Client Name: " />
            <Label fx:id="clientName" prefHeight="17.0" prefWidth="94.0" />
            <Label prefHeight="17.0" prefWidth="119.0" text="Account Balance: " />
            <Label fx:id="accountBalance" />
         </children>
      </HBox>
      <HBox prefHeight="58.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="64.0" prefWidth="277.0">
               <children>
                  <TextField fx:id="amountToInvest" onAction="#checkAmountToInvest" prefHeight="25.0" prefWidth="161.0" promptText="Choose an amount to invest" />
                  <Label fx:id="errorAmount" alignment="CENTER" prefHeight="61.0" prefWidth="277.0" textFill="#e10c0c" />
               </children>
            </VBox>
            <CheckComboBox fx:id="categoriesForLoan" prefHeight="25.0" prefWidth="242.0" />
         </children>
      </HBox>
      <HBox prefHeight="63.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="54.0" prefWidth="278.0">
               <children>
                  <ComboBox fx:id="minInterestForLoan" prefHeight="25.0" prefWidth="215.0" promptText="Choose Min Interest" />
                  <Label fx:id="errorMinTime" prefHeight="17.0" prefWidth="130.0" />
               </children>
            </VBox>
            <TextField fx:id="minTimeToReturn" onAction="#checkMinTime" prefHeight="25.0" prefWidth="244.0" promptText="Choose Min Time To Refund" />
         </children>
      </HBox>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#startInlay" prefHeight="25.0" prefWidth="322.0" text="Start Inlay" />
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="35.0" prefWidth="600.0" text="Optional Loans" textAlignment="CENTER">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</VBox>
