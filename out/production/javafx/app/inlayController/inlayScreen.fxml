<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.inlayController.inlayController">
   <children>
      <Label alignment="CENTER" prefHeight="68.0" prefWidth="600.0" text="Create new Inlay" textAlignment="CENTER" textFill="#3921cf">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <HBox prefHeight="64.0" prefWidth="600.0">
         <children>
            <TextField fx:id="amountToInvest" prefHeight="25.0" prefWidth="206.0" promptText="Choose an amount to invest" />
            <ComboBox fx:id="categoryToInvest" onAction="#chooseCategory" prefHeight="25.0" prefWidth="211.0" promptText="Choose Category" />
         </children>
      </HBox>
      <HBox prefHeight="54.0" prefWidth="600.0">
         <children>
            <TextField fx:id="chooseMinTime" promptText="Choose Min Time To Refund" />
            <ComboBox fx:id="ChooseMinInterest" prefHeight="25.0" prefWidth="215.0" promptText="Choose Min Interest" />
         </children>
      </HBox>
      <Button contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="472.0" text="Start Inlay" />
   </children>
</VBox>
